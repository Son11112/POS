<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fragment"
    tools:context=".FragmentAddUsers">

    <Button
        android:id="@+id/btnExitToUsers"
        android:layout_width="216dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:text="戻る"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="216dp"
        android:layout_height="71dp"
        android:layout_marginEnd="16dp"
        android:text="追加する"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <CheckBox
        android:id="@+id/cbxAdmin"
        android:layout_width="291dp"
        android:layout_height="76dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="72dp"
        android:text="ADMIN"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbxStaff"
        android:layout_width="291dp"
        android:layout_height="70dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="スタッフ"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbxAdmin" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="918dp"
        android:layout_height="83dp"
        android:layout_marginTop="244dp"
        android:ems="10"
        android:hint="名前"
        android:inputType="textPersonName"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtEmployerCode"
        android:layout_width="918dp"
        android:layout_height="83dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:textSize="30dp"
        android:hint="社員コード"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/edtName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtName"
        app:layout_constraintTop_toBottomOf="@+id/edtName" />

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="918dp"
        android:layout_height="83dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="パスワード"
        android:inputType="number"
        android:textSize="30dp"
        android:password="true"
        app:layout_constraintEnd_toEndOf="@+id/edtEmployerCode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtEmployerCode"
        app:layout_constraintTop_toBottomOf="@+id/edtEmployerCode" />

    <EditText
        android:id="@+id/edtNumberPhone"
        android:layout_width="918dp"
        android:layout_height="83dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="電話番号"
        android:inputType="phone"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/edtEmployerCode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtEmployerCode"
        app:layout_constraintTop_toBottomOf="@+id/edtEmployerCode" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="539dp"
        android:layout_height="271dp"
        android:layout_marginTop="4dp"
        android:datePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="200dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="生年月日:"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/datePicker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

</androidx.constraintlayout.widget.ConstraintLayout>